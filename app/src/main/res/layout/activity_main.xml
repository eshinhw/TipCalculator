<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/tvBillAmountLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bill Amount"
            android:textAlignment="center"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etBillAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="8"
            android:hint="Enter Bill"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTipAmountLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tip"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvTipAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvTotalAmountLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/tvSplitNumLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Split"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_weight="0.5" />

        <ImageView
            android:src="@drawable/ic_minus"
            android:id="@+id/ivMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <TextView
            android:id="@+id/tvSplitNum"
            android:layout_width="0dp"
            android:text="1"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"/>

        <ImageView
            android:src="@drawable/ic_plus"
            android:id="@+id/ivPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSplitBillLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Split Bill"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvSplitBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSplitTipLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Split Tip"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvSplitTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSplitTotalLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Split Total"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvSplitTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/tvTipPercentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="15%"
            android:textAlignment="center"
            android:textSize="30sp" />

        <SeekBar
            android:id="@+id/sbTipPercentage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:max="30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTenPct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10%"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnFifteenPct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="15%"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btnTwentyPct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="20%"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btnCustomTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Custom"
            android:layout_weight="1.6"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/tvCustomTipLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Custom (%)"
            android:textSize="30sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/etCustomTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter Tip"
            android:textSize="30sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:ems="8"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:visibility="invisible"/>


    </LinearLayout>

</LinearLayout>